<h1 style="text-align: center;margin: 5rem 0 2rem;">SIGN UP</h1>

<form id="signupForm" style="display: flex; flex-direction:column; margin: 0 auto; width: 550px;">
    <div style="margin-bottom: 1rem;">
        <label for="email" style="width: 150px; display: inline-block;">Email</label>
        <input type="text" name="username">
    </div>
    <div style="margin-bottom: 1rem;">
        <label for="password" style="width: 150px; display: inline-block;">Password</label>
        <input type="password" name="password">
    </div>
    <div style="margin-bottom: 1rem;">
        <label for="name" style="width: 150px; display: inline-block;">Name</label>
        <input type="text" name="name">
    </div>
    <div style="margin-bottom: 1rem;">
        <label for="address" style="width: 150px; display: inline-block;">Address</label>
        <input type="text" name="address">
    </div>
    <div style="margin-bottom: 1rem;">
        <label for="age" style="width: 150px; display: inline-block;">Age</label>
        <input type="number" name="age">
    </div>
    <div style="margin-bottom: 1rem;">
        <label for="phone" style="width: 150px; display: inline-block;">Phone</label>
        <input type="text" name="phone">
    </div>
    <div style="margin-bottom: 1rem;">
        <label for="file" style="width: 150px; display: inline-block;">File</label>
        <input type="file" name="file">
    </div>
    <div style="margin-bottom: 1rem;">
        <label for="isAdmin" style="width: 150px; display: inline-block;">Admin</label>
        <input type="checkbox" name="isAdmin" value=true>
    </div>
    <input type="submit" value="signup">
</form>

<script src="./js/signup.js"></script>